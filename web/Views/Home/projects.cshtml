@model Skeleton.Web.Models.ProjectsViewModel
@using Skeleton.Web.Properties

<section id="projects">
    @using (Html.BeginForm())
    {
        <div class="form-group row">
            <div class="col-md-4">
                @Html.LabelFor(m => m.SelectedProject, new { @class = "label-control" })
                @Html.DropDownListFor(m => m.SelectedProject, new SelectList(Model.Projects), Resources.ChoosePrompt, new { @class = "form-control" })
            </div>
        </div>

        if (!string.IsNullOrEmpty(Model.SelectedProject))
        {
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.SelectedArea, new { @class = "label-control" })
                    @Html.DropDownListFor(m => m.SelectedArea, new SelectList(Model.Areas), Resources.ChoosePrompt, new { @class = "form-control" })
                </div>
            </div>
        }

        <button type="submit" class="btn btn-success">@Html.Raw(@Resources.ChooseProjectButtonCaption)</button>
    }
</section>